<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/bg"
    android:weightSum="1">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView12"
        android:layout_marginTop="60dp"
        android:background="@drawable/userdiahead"
        android:layout_marginLeft="75dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="#6effffff"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="วันที่บันทึก :"
                android:id="@+id/datetext"
                android:textSize="16dp"
                android:textColor="#000000"
                android:layout_marginLeft="92dp" />

            <EditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:inputType="date|text"
                android:ems="10"
                android:id="@+id/D_date"
                android:textColor="#000000"
                android:background="#f7c2c2"
                android:layout_gravity="center_vertical"
                android:textSize="16dp"
                android:layout_marginLeft="20dp" />
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="เวลาที่บันทึก :"
                android:id="@+id/timetext"
                android:textSize="16dp"
                android:textColor="#000000"
                android:layout_marginLeft="78dp" />

            <EditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:inputType="date|text"
                android:ems="10"
                android:id="@+id/D_time"
                android:textColor="#000000"
                android:background="#f7c2c2"
                android:layout_gravity="center_vertical"
                android:textSize="16dp"
                android:layout_marginLeft="20dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ค่าน้ำตาลของผู้ใช้งาน :"
                android:id="@+id/sugartext"
                android:textSize="16dp"
                android:textColor="#000000"
                android:layout_marginLeft="15dp" />

            <EditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:inputType="date|text"
                android:ems="10"
                android:id="@+id/D_costSugar"
                android:textColor="#000000"
                android:background="#f7c2c2"
                android:layout_gravity="center_vertical"
                android:textSize="16dp"
                android:layout_marginLeft="20dp" />

        </LinearLayout>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton2"
            android:background="@drawable/savedatauser"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="15dp"
            android:onClick="ClickDisPlay" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="324dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:weightSum="1">

        <ImageView
            android:layout_width="238dp"
            android:layout_height="68dp"
            android:id="@+id/imageView11"
            android:background="@drawable/waringsuger"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

</LinearLayout>
