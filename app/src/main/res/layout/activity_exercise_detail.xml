<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nut.happyhealthy.FoodDetail"
    android:background="#f9f9f9">


    <LinearLayout
        android:id="@+id/container_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/imageView45"
        android:src="@drawable/arowback"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="3dp"
        android:onClick="ClickBackExeDetailHome" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="บันทึกออกกำลังกาย"
        android:id="@+id/textView26"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#fbf8f8" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout3">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="tv_exercise_name"
            android:id="@+id/tv_exercise_name"
            android:layout_weight="1"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="@drawable/my_bg_saveexe_name"
            android:layout_marginTop="20dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="178dp"
        android:layout_marginRight="50dp"
        android:layout_alignParentRight="true">

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="tv_exercise_calories"
            android:id="@+id/tv_exercise_calories"
            android:textSize="20dp"
            android:background="@drawable/my_bg_saveexe_name" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="210dp"
        android:layout_marginRight="35dp"
        android:layout_alignParentRight="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="พลังงาน(กิโลแคลอรี่)"
            android:id="@+id/textView17"
            android:textSize="13dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="185dp"
        android:layout_marginRight="50dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout4">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="เซท"
            android:id="@+id/textView16"
            android:layout_marginRight="70dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="45dp"
        android:layout_alignParentLeft="true">

        <EditText
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/et_exe2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="18dp"
            android:background="@drawable/my_bg_saveexe_name"
            android:text="1" />

        <Button
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:text="ระยะเวลา"
            android:id="@+id/buttonExe2"
            android:layout_below="@+id/et_exe2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:textSize="11dp" />

    </LinearLayout>

    <ImageView
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:id="@+id/recExe"
        android:src="@drawable/buttonsaveexe"
        android:layout_marginTop="200dp"
        android:layout_alignParentBottom="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="false"
        android:orientation="vertical"
        android:layout_below="@+id/linearLayout4"
        android:layout_marginTop="90dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_exe_dis"
            android:layout_gravity="bottom|center_horizontal"
            android:hint="tv_exe_dis"
            android:textSize="14dp"
            android:textColor="#656565" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="false"
        android:orientation="vertical"
        android:layout_below="@+id/linearLayout4"
        android:layout_alignParentStart="false"
        android:layout_marginTop="140dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_exe_detail"
            android:layout_gravity="bottom|center_vertical"
            android:hint="tv_exe_detail"
            android:textSize="14dp"
            android:textColor="#656565"
            android:gravity="center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="false"
        android:orientation="vertical"
        android:layout_below="@+id/linearLayout3"
        android:layout_marginTop="7dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_exe_des"
            android:layout_gravity="bottom|center_horizontal"
            android:hint="tv_exe_des"
            android:textSize="14dp"
            android:textColor="#656565" />
    </LinearLayout>


</RelativeLayout>
