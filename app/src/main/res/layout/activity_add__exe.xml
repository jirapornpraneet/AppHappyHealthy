<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add__exe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jiraporn.nut.happyhealthy.Add_Exe"
    android:background="#ffffff">

    <LinearLayout
        android:id="@+id/container_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbarexe" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/imageView45"
        android:src="@drawable/arowback"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="3dp"
        android:onClick="ClickAddExeBack" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="เพิ่มข้อมูลออกกำลังกาย"
        android:id="@+id/textView26"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#ffffff" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout3">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tv_exercise_name"
            android:layout_weight="1"
            android:textSize="25sp"
            android:hint="ชื่อออกกำลังกาย"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:textColor="#a4ddac" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/my_bg_saveexe_name"
        android:gravity="center_vertical|center_horizontal">

        <EditText
            android:id="@+id/e_cal"
            android:textSize="20dp"
            android:background="@drawable/my_bg_saveexe_name"
            android:layout_gravity="center_vertical"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:inputType="number"
            android:gravity="center_vertical|center_horizontal"
            android:layout_width="135dp"
            android:layout_height="50dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_height="30dp"
        android:layout_marginTop="225dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/my_bg_saveexe_name"
        android:layout_width="135dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="พลังงาน(กิโลแคลอรี่)"
            android:id="@+id/textView17"
            android:textSize="14dp"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffff"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_height="30dp"
        android:layout_marginTop="225dp"
        android:id="@+id/linearLayout4"
        android:layout_marginLeft="15dp"
        android:background="@drawable/my_bg_saveexe_name"
        android:layout_width="135dp"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="นาที"
            android:id="@+id/e_unitminute"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/my_bg_saveexe_name"
            android:gravity="center_horizontal"
            android:textColor="#ffffff"
            android:textSize="16dp"
            android:layout_marginTop="3dp"
            android:layout_weight="6.80"
            android:layout_marginBottom="3dp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="15dp"
        android:layout_alignParentLeft="true"
        android:background="@drawable/my_bg_saveexe_name"
        android:gravity="center_vertical|center_horizontal"
        android:layout_width="135dp"
        android:layout_height="50dp">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/e_minute"
            android:textSize="20dp"
            android:background="@drawable/my_bg_saveexe_name"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#ffffff"
            android:textStyle="bold" />

    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recExe"

        android:onClick="ClickSaveExe"
        android:src="@drawable/buttonsaveexe"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="false"
        android:orientation="vertical"
        android:layout_below="@+id/linearLayout4"
        android:layout_marginTop="40dp"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="false"
        android:orientation="vertical"
        android:layout_below="@+id/linearLayout4"
        android:layout_marginTop="90dp"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/e_detail"
            android:layout_gravity="bottom|center_horizontal"
            android:hint="รายละเอียดการออกกำลังกาย"
            android:gravity="center_vertical|center_horizontal"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textSize="15sp"
            android:textColor="#a4ddac" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="false"
        android:orientation="vertical"
        android:layout_below="@+id/linearLayout3"
        android:layout_marginTop="7dp">

    </LinearLayout>

</RelativeLayout>
