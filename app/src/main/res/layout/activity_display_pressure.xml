<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.example.nut.happyhealthy.DisplayPressure"
    android:background="#e3e2e2">


    <LinearLayout
        android:id="@+id/container_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ความดัน"
        android:id="@+id/textView22"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffffff" />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/imageView35"
        android:src="@drawable/listhistory"
        android:onClick="ClickHistoryPre"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/imageView36"
        android:src="@drawable/arowback"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="3dp"
        android:onClick="ClickBackHomeDisPre" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/my_box_diabetes"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_P_Date"
                android:textSize="24dp"
                android:autoText="false"
                android:hint="DD-MM-YYYY  HH:MM"
                android:textStyle="bold"
                android:textColor="#a6a6a6"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:id="@+id/imageViewsugatafter"
                android:layout_marginLeft="20dp"
                android:src="@drawable/txtpretop"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:background="@drawable/my_box_dis"
            android:layout_gravity="center_horizontal"
            android:gravity="clip_horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_P_CostPressureTop"
                android:textSize="20dp"
                android:autoText="false"
                android:background="@drawable/my_box_dis"
                android:textColor="#a6a6a6"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal"
                android:layout_weight="5" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:id="@+id/imageViewDown"
                android:layout_marginLeft="20dp"
                android:src="@drawable/dispretoptxt"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="235dp"
            android:layout_height="30dp"
            android:background="@drawable/my_border_waring"
            android:layout_gravity="center_horizontal"
            android:gravity="clip_horizontal">

            <TextView
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_P_LevelDown"
                android:textSize="16dp"
                android:autoText="false"
                android:background="@drawable/my_border_waring"
                android:textColor="#a6a6a6"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal"
                android:layout_weight="5" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:id="@+id/imageViewpreDown"
                android:layout_marginLeft="20dp"
                android:src="@drawable/txtpredown"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:background="@drawable/my_box_dis"
            android:layout_gravity="center_horizontal"
            android:gravity="clip_horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_P_CostPressureDown"
                android:textSize="20dp"
                android:autoText="false"
                android:background="@drawable/my_box_dis"
                android:textColor="#a6a6a6"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal"
                android:layout_weight="5" />

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:id="@+id/imagepreDown2"
                android:layout_marginLeft="20dp"
                android:src="@drawable/dispredowntxt"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="235dp"
            android:layout_height="30dp"
            android:background="@drawable/my_border_waring"
            android:layout_gravity="center_horizontal"
            android:gravity="clip_horizontal">

            <TextView
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_P_LevelTop"
                android:textSize="16dp"
                android:autoText="false"
                android:background="@drawable/my_border_waring"
                android:textColor="#a6a6a6"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal"
                android:layout_weight="5" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp" >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="28dp"
                android:id="@+id/imageView6"
                android:layout_marginLeft="20dp"
                android:src="@drawable/textheart" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/my_box_dis" >

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/tv_P_Heart"
                android:textColor="#000000"
                android:background="@drawable/my_box_dis"
                android:layout_gravity="center_vertical"
                android:textSize="20dp"
                android:layout_marginLeft="5dp"
                android:gravity="center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:id="@+id/imageView22"
                android:layout_marginLeft="20dp"
                android:src="@drawable/disprehearttxt"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:background="@drawable/my_border_waring"
            android:layout_gravity="center_horizontal"
            android:gravity="clip_horizontal" >

            <TextView
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_P_level_heart"
                android:textSize="20dp"
                android:autoText="false"
                android:background="@drawable/my_border_waring"
                android:textColor="#a6a6a6"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal"
                android:layout_weight="5" />
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
