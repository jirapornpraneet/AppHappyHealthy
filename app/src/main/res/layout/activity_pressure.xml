<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/bg">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView12"
        android:layout_marginTop="45dp"
        android:background="@drawable/userprehead"
        android:layout_marginLeft="85dp" />


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:background="#6effffff"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="วันที่บันทึก :"
                android:id="@+id/textDate"
                android:textSize="16dp"
                android:textColor="#000000"
                android:layout_marginLeft="70dp" />

            <EditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:inputType="date|text"
                android:ems="10"
                android:id="@+id/P_date"
                android:textColor="#000000"
                android:background="#f7c2c2"
                android:layout_gravity="center_vertical"
                android:textSize="16dp"
                android:layout_marginLeft="20dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="เวลาที่บันทึก :"
                android:id="@+id/textView19"
                android:textSize="16dp"
                android:textColor="#000000"
                android:layout_marginLeft="58dp" />

            <EditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:inputType="date|text"
                android:ems="10"
                android:id="@+id/P_time"
                android:textColor="#000000"
                android:background="#f7c2c2"
                android:layout_gravity="center_vertical"
                android:textSize="16dp"
                android:layout_marginLeft="20dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ค่าความดันของผู้ใช้งาน :"
                android:id="@+id/pressuretext"
                android:textSize="16dp"
                android:layout_weight="1"
                android:textColor="#000000"
                android:layout_marginLeft="55dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="date|text"
                android:ems="10"
                android:id="@+id/P_costPressureTop"
                android:textColor="#000000"
                android:background="#f7c2c2"
                android:layout_gravity="center_vertical"
                android:textSize="16dp"
                android:layout_marginLeft="90dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ค่าความดันของผู้ใช้งาน :"
                android:id="@+id/textView12"
                android:textSize="16dp"
                android:textColor="#000000"
                android:layout_marginLeft="55dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="date|text"
                android:ems="10"
                android:id="@+id/P_costPressureDown"
                android:textColor="#000000"
                android:background="#f7c2c2"
                android:layout_gravity="center_vertical"
                android:textSize="16dp"
                android:layout_marginLeft="90dp" />
        </LinearLayout>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton4"
            android:layout_marginTop="15dp"
            android:background="@drawable/savedatauser"
            android:layout_marginLeft="120dp"
            android:onClick="ClickDisPlay" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="324dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:weightSum="1">

        <ImageView
            android:layout_width="238dp"
            android:layout_height="68dp"
            android:id="@+id/imageView11"
            android:background="@drawable/waringpre"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

</LinearLayout>
