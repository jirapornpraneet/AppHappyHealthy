<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.example.nut.happyhealthy.DisplayUser">

    <LinearLayout
        android:id="@+id/container_toolbar"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ข้อมูลผู้ใช้งาน"
        android:id="@+id/textView18"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textSize="20dp"
        android:textStyle="bold" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="บันทึก"
        android:id="@+id/savedatauser"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="14dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="false"
        android:textColor="#ffffff"
        android:layout_marginRight="15dp"
        android:onClick="ClickSaveDataUser"/>




    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_width="95dp"
                android:layout_height="35dp"
                android:id="@+id/imageView15"
                android:layout_marginLeft="30dp"
                android:src="@drawable/da5" />

            <EditText
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/tv_Name"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:background="@drawable/my_border_box"
                android:layout_marginLeft="4dp"
                android:textColor="#625f5f" />

        </LinearLayout>




        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="95dp"
                android:layout_height="35dp"
                android:id="@+id/imageView17"
                android:src="@drawable/da6"
                android:layout_marginLeft="30dp" />



            <RadioGroup
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:id="@+id/User_Sex"
                android:layout_weight="1"
                android:layout_marginRight="40dp"
                android:layout_marginTop="8dp">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ชาย"
                    android:id="@+id/man"
                    android:textColor="#000000"
                    android:layout_weight="1"
                    android:checked="false"
                    android:textSize="16sp"
                    android:background="@drawable/my_border_box"
                    android:textStyle="bold"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="หญิง"
                    android:id="@+id/woman"
                    android:textColor="#000000"
                    android:layout_weight="1"
                    android:textSize="16dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/my_border_box"
                    android:textStyle="bold" />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="95dp"
                android:layout_height="35dp"
                android:id="@+id/imageView20"
                android:layout_marginLeft="30dp"
                android:src="@drawable/da7" />

            <EditText
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/tv_Age"
                android:textSize="18dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:background="@drawable/my_border_box"
                android:textColor="#625f5f" />
        </LinearLayout>



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="95dp"
                android:layout_height="35dp"
                android:id="@+id/imageView18"
                android:src="@drawable/da8"
                android:layout_marginLeft="30dp" />

            <EditText
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/tv_Weight"
                android:textSize="18dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:background="@drawable/my_border_box"
                android:textColor="#625f5f" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="95dp"
                android:layout_height="35dp"
                android:id="@+id/imageView19"
                android:layout_marginLeft="30dp"
                android:src="@drawable/da9" />

            <EditText
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/tv_Height"
                android:textSize="18dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:background="@drawable/my_border_box"
                android:textColor="#625f5f" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="170dp"
        android:layout_height="160dp"
        android:background="@drawable/bmr"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="320dp">

        <TextView
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/tv_BMR"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#625f5f"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="10dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="170dp"
        android:layout_height="160dp"
        android:background="@drawable/bmi"
        android:layout_alignParentRight="true"
        android:layout_marginTop="320dp"
        android:layout_marginRight="10dp">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/tv_BMI"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#625f5f"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/weightStdTextView"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp" />
    </LinearLayout>

</RelativeLayout>
