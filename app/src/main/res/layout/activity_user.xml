<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nut.happyhealthy.User">


    <LinearLayout
        android:id="@+id/container_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageView
            android:layout_width="110dp"
            android:layout_height="120dp"
            android:id="@+id/imageView3"
            android:src="@drawable/userdia"
            android:layout_marginTop="240dp"
            android:onClick="ClickDiabetes" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="false"
        android:layout_alignParentBottom="false"
        android:layout_alignParentRight="false">

        <ImageView
            android:layout_width="110dp"
            android:layout_height="120dp"
            android:id="@+id/imageView4"
            android:src="@drawable/userkid"
            android:layout_marginTop="130dp"
            android:layout_marginLeft="55dp"
            android:onClick="ClickKidney" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="false"
        android:layout_alignParentBottom="false"
        android:layout_alignParentRight="false">

        <ImageView
            android:layout_width="110dp"
            android:layout_height="120dp"
            android:id="@+id/imageView16"
            android:src="@drawable/userpre"
            android:layout_marginTop="130dp"
            android:layout_marginLeft="165dp"
            android:onClick="ClickPressure" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="false"
        android:layout_alignParentBottom="false"
        android:layout_alignParentRight="false">

        <ImageView
            android:layout_width="110dp"
            android:layout_height="120dp"
            android:id="@+id/imageView21"
            android:src="@drawable/userbasic"
            android:layout_marginLeft="218dp"
            android:layout_marginTop="240dp"
            android:onClick="ClickDisplayUser" />
    </LinearLayout>
</RelativeLayout>
