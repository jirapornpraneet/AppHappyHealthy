        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/f_netunit"
            android:layout_weight="1"
            android:textSize="12dp"
            android:textColor="#f9a98a"
            android:layout_marginLeft="50dp"
