            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="กรัม"
            android:id="@+id/textView12"
            android:layout_marginTop="4dp"
            android:textSize="13dp"
            android:textColor="#f9a98a" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="กรัม"
            android:id="@+id/textView13"
            android:layout_marginTop="4dp"
            android:textSize="13dp"
            android:textColor="#f9a98a" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="กรัม"
