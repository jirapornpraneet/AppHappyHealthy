<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nut.happyhealthy.DataUser"
    android:background="#ff2d38">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ข้อมูลผู้ใช้งาน"
        android:id="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textSize="25dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/button"
        android:onClick="ClickDisPlay"
        android:nestedScrollingEnabled="false"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="350dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="150dp"
        android:background="#ff2d38">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="ชื่อผู้ใช้ :"
                android:id="@+id/nametext"
                android:layout_weight="1"
                android:textSize="20dp"
                android:layout_marginLeft="30dp"
                android:textColor="#ffffff"
                android:layout_marginTop="20dp" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/name"
                android:layout_weight="2"
                android:textColor="#fffefe"
                android:background="#f1202b"
                android:editable="true"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="5dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="เพศ :"
                android:id="@+id/sextext"
                android:textSize="20dp"
                android:layout_marginLeft="56dp"
                android:textColor="#ffffff" />

            <RadioGroup
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:id="@+id/selectsex"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="man"
                    android:id="@+id/man"
                    android:textColor="#ffffff"
                    android:background="#f1202b"
                    android:layout_weight="1"
                    android:layout_marginLeft="20dp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="woman"
                    android:id="@+id/woman"
                    android:textColor="#ffffff"
                    android:background="#f1202b"
                    android:layout_weight="1"
                    android:layout_marginLeft="20dp" />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="อายุ :"
                android:id="@+id/agetext"
                android:textSize="20dp"
                android:layout_weight="1"
                android:layout_marginLeft="56dp"
                android:textColor="#ffffff" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number|text"
                android:ems="10"
                android:id="@+id/age"
                android:layout_weight="2"
                android:layout_marginLeft="40dp"
                android:textColor="#ffffff"
                android:background="#f1202b"
                android:layout_marginRight="20dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="น้ำหนัก :"
                android:id="@+id/weighttext"
                android:textSize="20dp"
                android:layout_weight="1"
                android:layout_marginLeft="30dp"
                android:textColor="#ffffff" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="date|text"
                android:ems="10"
                android:id="@+id/weight"
                android:layout_weight="2"
                android:layout_marginLeft="40dp"
                android:textColor="#fffefe"
                android:background="#f1202b"
                android:layout_marginRight="20dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ส่วนสูง :"
                android:id="@+id/heightext"
                android:textSize="20dp"
                android:layout_weight="1"
                android:layout_marginLeft="33dp"
                android:textColor="#ffffff" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="date|text"
                android:ems="10"
                android:id="@+id/height"
                android:layout_weight="2"
                android:layout_marginLeft="40dp"
                android:textColor="#fffefe"
                android:background="#f1202b" />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
