<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nut.happyhealthy.DataUser">


    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView21"
        android:src="@drawable/userdatahead1"
        android:layout_alignLeft="@+id/linearLayout"
        android:layout_alignStart="@+id/linearLayout"
        android:layout_alignRight="@+id/linearLayout"
        android:layout_alignEnd="@+id/linearLayout" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="245dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/linearLayout"
        android:layout_marginTop="163dp"
        android:background="#a9ef7777">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:id="@+id/imageView15"
                android:src="@drawable/people"
                android:layout_marginLeft="35dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="ชื่อผู้ใช้ :"
                android:id="@+id/nametext"
                android:textSize="16dp"
                android:textColor="#000000"
                android:textIsSelectable="false"
                android:layout_weight="1"
                android:layout_marginLeft="15dp" />

            <EditText
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:id="@+id/User_Name"
                android:textColor="#000000"
                android:background="#ffeded"
                android:editable="true"
                android:layout_marginRight="100dp"
                android:layout_weight="0.59"
                android:textSize="16dp"
                android:layout_marginLeft="12dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:id="@+id/imageView17"
                android:src="@drawable/sex"
                android:layout_marginLeft="35dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="เพศ :"
                android:id="@+id/sextext"
                android:textSize="16sp"
                android:layout_marginLeft="15dp"
                android:textColor="#000000"
                android:textIsSelectable="false" />

            <RadioGroup
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:id="@+id/User_Sex"
                android:layout_weight="1"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="22dp">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="man"
                    android:id="@+id/man"
                    android:textColor="#000000"
                    android:layout_weight="1"
                    android:checked="false"
                    android:textSize="16sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="woman"
                    android:id="@+id/woman"
                    android:textColor="#000000"
                    android:layout_weight="1"
                    android:textSize="16dp"
                    android:layout_marginRight="10dp" />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:id="@+id/imageView20"
                android:layout_marginLeft="35dp"
                android:src="@drawable/age" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="อายุ :"
                android:id="@+id/agetext"
                android:textSize="16dp"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textIsSelectable="false"
                android:layout_marginLeft="14dp" />

            <EditText
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/User_Age"
                android:layout_weight="2"
                android:textColor="#000000"
                android:background="#ffeded"
                android:layout_marginRight="100dp"
                android:textSize="16dp"
                android:hint="ปี"
                android:layout_marginLeft="26dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="18dp"
                android:id="@+id/imageView18"
                android:src="@drawable/weight"
                android:layout_marginLeft="35dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="น้ำหนัก :"
                android:id="@+id/weighttext"
                android:textSize="16dp"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textIsSelectable="false"
                android:layout_marginLeft="13dp" />

            <EditText
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/User_Weight"
                android:layout_weight="2"
                android:textColor="#000000"
                android:background="#ffeded"
                android:layout_marginRight="100dp"
                android:autoText="false"
                android:textSize="16dp"
                android:hint="กิโลกรัม" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="18dp"
                android:id="@+id/imageView19"
                android:layout_marginLeft="35dp"
                android:src="@drawable/height" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ส่วนสูง :"
                android:id="@+id/heightext"
                android:textSize="16dp"
                android:layout_weight="1"
                android:layout_marginLeft="13dp"
                android:textColor="#000000"
                android:textIsSelectable="false" />

            <EditText
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/User_Height"
                android:layout_weight="2"
                android:textColor="#000000"
                android:background="#ffeded"
                android:layout_marginRight="100dp"
                android:textSize="16dp"
                android:layout_marginLeft="8dp"
                android:hint="เซนติเมตร" />

        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:onClick="ClickDisPlay"
        android:layout_alignParentBottom="true"
        android:layout_gravity="left"
        android:background="@drawable/savedatauser" />


</RelativeLayout>