<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.example.nut.happyhealthy.Home"
    android:background="#ffe1e3">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:paddingLeft="@dimen/z2_margin_bigspace"
        android:paddingRight="@dimen/z2_margin_bigspace"
        android:text="day+month+year"
        android:id="@+id/showDate"
        android:layout_centerHorizontal="true"
        android:background="@drawable/my_border_black"
        android:layout_marginTop="40dp"
        android:textSize="18dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:weightSum="1"
            android:gravity="center">

            <ImageView
                android:layout_width="258dp"
                android:layout_height="wrap_content"
                android:id="@+id/imageView5"
                android:layout_weight="0.25"
                android:src="@drawable/pie" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_alignParentBottom="true"
        android:background="#ff6370">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/imageView"
            android:layout_weight="0.5"
            android:onClick="ClickFood"
            android:src="@drawable/food" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/imageView14"
            android:layout_weight="0.5"
            android:onClick="ClickExe"
            android:src="@drawable/exe" />

    </LinearLayout>

</RelativeLayout>
